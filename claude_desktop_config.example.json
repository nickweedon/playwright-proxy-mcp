{
  "mcpServers": {
    "playwright-proxy-mcp-docker": {
      "comment": "Docker deployment with stealth mode enabled - requires 'docker compose build' first",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/path/to/your/blob-storage:/mnt/blob-storage",
        "-e",
        "BLOB_STORAGE_ROOT=/mnt/blob-storage",
        "-e",
        "BLOB_MAX_SIZE_MB=2048",
        "-e",
        "BLOB_TTL_HOURS=24",
        "-e",
        "BLOB_SIZE_THRESHOLD_KB=50",
        "-e",
        "BLOB_CLEANUP_INTERVAL_MINUTES=60",
        "-e",
        "PW_MCP_PROXY_BROWSER=chromium",
        "-e",
        "PW_MCP_PROXY_HEADLESS=true",
        "-e",
        "PW_MCP_PROXY_CAPS=vision,pdf",
        "-e",
        "PW_MCP_PROXY_TIMEOUT_ACTION=5000",
        "-e",
        "PW_MCP_PROXY_TIMEOUT_NAVIGATION=60000",
        "-e",
        "PW_MCP_PROXY_VIEWPORT_SIZE=1920x1080",
        "-e",
        "PW_MCP_PROXY_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/121.0.0.0 Safari/537.36",
        "-e",
        "PW_MCP_PROXY_IGNORE_HTTPS_ERRORS=false",
        "-e",
        "PW_MCP_PROXY__DEFAULT_INSTANCES=1",
        "-e",
        "PW_MCP_PROXY__DEFAULT_IS_DEFAULT=true",
        "playwright-proxy-mcp:latest",
        "uv",
        "run",
        "playwright-proxy-mcp"
      ]
    },
    "playwright-proxy-mcp-minimal": {
      "comment": "Minimal configuration using defaults (no stealth) - just specify blob storage location",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/path/to/your/blob-storage:/mnt/blob-storage",
        "-e",
        "PW_MCP_PROXY__DEFAULT_INSTANCES=1",
        "-e",
        "PW_MCP_PROXY__DEFAULT_IS_DEFAULT=true",
        "playwright-proxy-mcp:latest",
        "uv",
        "run",
        "playwright-proxy-mcp"
      ]
    },
    "playwright-proxy-mcp-max-stealth": {
      "comment": "Maximum stealth configuration - headed mode, persistent profile, realistic settings",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/path/to/your/blob-storage:/mnt/blob-storage",
        "-v",
        "/path/to/your/browser-profile:/app/browser-profile",
        "-e",
        "BLOB_STORAGE_ROOT=/mnt/blob-storage",
        "-e",
        "PW_MCP_PROXY_BROWSER=chromium",
        "-e",
        "PW_MCP_PROXY_HEADLESS=false",
        "-e",
        "PW_MCP_PROXY_CAPS=vision,pdf",
        "-e",
        "PW_MCP_PROXY_VIEWPORT_SIZE=1920x1080",
        "-e",
        "PW_MCP_PROXY_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/121.0.0.0 Safari/537.36",
        "-e",
        "PW_MCP_PROXY_USER_DATA_DIR=/app/browser-profile",
        "-e",
        "PW_MCP_PROXY_ISOLATED=false",
        "-e",
        "PW_MCP_PROXY_SAVE_SESSION=true",
        "-e",
        "PW_MCP_PROXY__DEFAULT_INSTANCES=1",
        "-e",
        "PW_MCP_PROXY__DEFAULT_IS_DEFAULT=true",
        "playwright-proxy-mcp:latest",
        "uv",
        "run",
        "playwright-proxy-mcp"
      ]
    },
    "playwright-extension-mcp-server-wsl": {
      "comment": "WSL native deployment (no Docker) - Playwright MCP Server for use with browser extension to directly manipulate pages via the user's browser session. SETUP: In WSL terminal run: cd /opt/src/mcp/playwright-proxy-mcp && uv sync && mkdir -p /mnt/c/docker/blob-storage",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/opt/src/mcp/playwright-proxy-mcp",
        "playwright-proxy-mcp"
      ],
      "env": {
        "BLOB_STORAGE_ROOT": "/mnt/c/docker/blob-storage",
        "BLOB_MAX_SIZE_MB": "2048",
        "BLOB_TTL_HOURS": "24",
        "BLOB_SIZE_THRESHOLD_KB": "50",
        "BLOB_CLEANUP_INTERVAL_MINUTES": "60",
        "PW_MCP_PROXY_CAPS": "vision,pdf",
        "PW_MCP_PROXY_TIMEOUT_ACTION": "5000",
        "PW_MCP_PROXY_TIMEOUT_NAVIGATION": "60000",
        "PW_MCP_PROXY__DEFAULT_INSTANCES": "1",
        "PW_MCP_PROXY__DEFAULT_IS_DEFAULT": "true",
        "PW_MCP_PROXY__DEFAULT__0_EXTENSION": "true"
      }
    }
  }
}
