{
  "mcpServers": {
    "playwright-proxy-mcp-server": {
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "PW_MCP_PROXY_BROWSER=chromium",
        "-e",
        "PW_MCP_PROXY_HEADLESS=true",
        "-e",
        "PW_MCP_PROXY__DEFAULT_INSTANCES=1",
        "-e",
        "PW_MCP_PROXY__DEFAULT_IS_DEFAULT=true",
        "playwright-proxy-mcp:latest",
        "uv",
        "run",
        "playwright-proxy-mcp"
      ],
      "command": "docker"
    }
  }
}
