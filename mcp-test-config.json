{
  "mcpServers": {
    "playwright-proxy-mcp-test": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e", "PW_MCP_PROXY_BROWSER=chromium",
        "-e", "PW_MCP_PROXY_HEADLESS=true",
        "-e", "PW_MCP_PROXY_CAPS=vision,pdf",
        "-e", "PW_MCP_PROXY_OUTPUT_DIR=/app/playwright-output",
        "-e", "PW_MCP_PROXY_SAVE_SESSION=true",
        "-e", "PW_MCP_PROXY_SAVE_TRACE=false",
        "-e", "PW_MCP_PROXY_TIMEOUT_ACTION=5000",
        "-e", "PW_MCP_PROXY_TIMEOUT_NAVIGATION=60000",
        "-e", "PW_MCP_PROXY_IMAGE_RESPONSES=allow",
        "-e", "PW_MCP_PROXY_IGNORE_HTTPS_ERRORS=false",
        "-e", "PW_MCP_PROXY__DEFAULT_INSTANCES=1",
        "-e", "PW_MCP_PROXY__DEFAULT_IS_DEFAULT=true",
        "-e", "BLOB_STORAGE_ROOT=/mnt/blob-storage",
        "-e", "BLOB_MAX_SIZE_MB=500",
        "-e", "BLOB_TTL_HOURS=24",
        "-e", "BLOB_SIZE_THRESHOLD_KB=50",
        "-e", "BLOB_CLEANUP_INTERVAL_MINUTES=60",
        "-e", "PROXY_DEBUG=false",
        "playwright-proxy-mcp:latest",
        "uv",
        "run",
        "playwright-proxy-mcp"
      ]
    }
  }
}
