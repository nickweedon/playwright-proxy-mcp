{
  "mcpServers": {
    "playwright-proxy-mcp-docker": {
      "comment": "Docker deployment with stealth mode enabled - requires 'docker compose build' first",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/path/to/your/blob-storage:/mnt/blob-storage",
        "-e",
        "BLOB_STORAGE_ROOT=/mnt/blob-storage",
        "-e",
        "BLOB_MAX_SIZE_MB=2048",
        "-e",
        "BLOB_TTL_HOURS=24",
        "-e",
        "BLOB_SIZE_THRESHOLD_KB=50",
        "-e",
        "BLOB_CLEANUP_INTERVAL_MINUTES=60",
        "-e",
        "PLAYWRIGHT_BROWSER=chromium",
        "-e",
        "PLAYWRIGHT_HEADLESS=true",
        "-e",
        "PLAYWRIGHT_CAPS=vision,pdf",
        "-e",
        "PLAYWRIGHT_TIMEOUT_ACTION=5000",
        "-e",
        "PLAYWRIGHT_TIMEOUT_NAVIGATION=60000",
        "-e",
        "PLAYWRIGHT_VIEWPORT_SIZE=1920x1080",
        "-e",
        "PLAYWRIGHT_STEALTH_MODE=true",
        "-e",
        "PLAYWRIGHT_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/121.0.0.0 Safari/537.36",
        "-e",
        "PLAYWRIGHT_IGNORE_HTTPS_ERRORS=false",
        "playwright-proxy-mcp:latest",
        "uv",
        "run",
        "playwright-proxy-mcp"
      ]
    },
    "playwright-proxy-mcp-minimal": {
      "comment": "Minimal configuration using defaults (no stealth) - just specify blob storage location",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/path/to/your/blob-storage:/mnt/blob-storage",
        "playwright-proxy-mcp:latest",
        "uv",
        "run",
        "playwright-proxy-mcp"
      ]
    },
    "playwright-proxy-mcp-max-stealth": {
      "comment": "Maximum stealth configuration - headed mode, persistent profile, realistic settings",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/path/to/your/blob-storage:/mnt/blob-storage",
        "-v",
        "/path/to/your/browser-profile:/app/browser-profile",
        "-e",
        "BLOB_STORAGE_ROOT=/mnt/blob-storage",
        "-e",
        "PLAYWRIGHT_BROWSER=chromium",
        "-e",
        "PLAYWRIGHT_HEADLESS=false",
        "-e",
        "PLAYWRIGHT_CAPS=vision,pdf",
        "-e",
        "PLAYWRIGHT_VIEWPORT_SIZE=1920x1080",
        "-e",
        "PLAYWRIGHT_STEALTH_MODE=true",
        "-e",
        "PLAYWRIGHT_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/121.0.0.0 Safari/537.36",
        "-e",
        "PLAYWRIGHT_USER_DATA_DIR=/app/browser-profile",
        "-e",
        "PLAYWRIGHT_ISOLATED=false",
        "-e",
        "PLAYWRIGHT_SAVE_SESSION=true",
        "playwright-proxy-mcp:latest",
        "uv",
        "run",
        "playwright-proxy-mcp"
      ]
    }
  }
}
