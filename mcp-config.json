{
  "mcpServers": {
    "playwright-proxy-mcp-test": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e", "PLAYWRIGHT_BROWSER=chromium",
        "-e", "PLAYWRIGHT_HEADLESS=true",
        "-e", "PLAYWRIGHT_CAPS=vision,pdf",
        "-e", "PLAYWRIGHT_OUTPUT_DIR=/app/playwright-output",
        "-e", "PLAYWRIGHT_SAVE_SESSION=true",
        "-e", "PLAYWRIGHT_SAVE_TRACE=false",
        "-e", "PLAYWRIGHT_TIMEOUT_ACTION=5000",
        "-e", "PLAYWRIGHT_TIMEOUT_NAVIGATION=60000",
        "-e", "PLAYWRIGHT_IMAGE_RESPONSES=allow",
        "-e", "PLAYWRIGHT_STEALTH_MODE=false",
        "-e", "PLAYWRIGHT_IGNORE_HTTPS_ERRORS=false",
        "-e", "PLAYWRIGHT_EXTENSION=false",
        "-e", "BLOB_STORAGE_ROOT=/mnt/blob-storage",
        "-e", "BLOB_MAX_SIZE_MB=500",
        "-e", "BLOB_TTL_HOURS=24",
        "-e", "BLOB_SIZE_THRESHOLD_KB=50",
        "-e", "BLOB_CLEANUP_INTERVAL_MINUTES=60",
        "-e", "PROXY_DEBUG=false",
        "playwright-proxy-mcp:latest",
        "uv",
        "run",
        "playwright-proxy-mcp"
      ]
    }
  }
}
